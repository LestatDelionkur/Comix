@model Comix.ViewModels.Comics.ChapterViewModel

@{
    ViewData["Title"] = "Загрузка комикса";
}

<script src="~/lib/angular/angular.js"></script>
<script src="~/js/controllers.js"></script>

<h2>Загрузка комикса</h2>

<form asp-action="Create" ng-app="comicsApp">
    <div class="form-horizontal"  ng-controller="ComicsListCtrl">
      
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>


        <div class="form-group  col-md-10">
            <label asp-for="ComicsKindTitle" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <div class="radio" ng-repeat="comicsKind in comicsKinds">
                    <label>
                        <input type="radio" name="optionsRadios" value="{{comicsKind.Id}}" checked>
                        {{comicsKind.Title}}
                    </label>
                </div>
            </div>
        </div>
 
        <div class="row  col-md-10">
            <label asp-for="ComicsTitle" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <label><input type="text" class="form-control" multiple name="myName" list="names" ng-model="comics.Title"></label>
                <!-- и где-то на странице следующий блок (и не обязательно внутри формы)-->
                <datalist id="names">
                    <option ng-repeat="comics in comicses" value="{{comics.Title}}" id="{{comics.Id}}"/>
                </datalist>
            </div>

           

        </div><!-- /.col-lg-6 -->

       





        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @*<input type="submit" value="Create" class="btn btn-default" />*@
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
